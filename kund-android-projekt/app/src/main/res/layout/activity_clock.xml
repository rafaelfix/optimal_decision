<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameTime"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimeActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeName">


        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:gravity="center"
            android:textSize="38sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeName"
        android:id="@+id/timeButtonName">

        <Button
            android:id="@+id/buttonTimeStart"
            android:layout_width="wrap_content"
            android:layout_height="70sp"
            android:textSize="28sp"
            android:text="Start" />

        <Button
            android:id="@+id/buttonTimeStop"
            android:layout_width="wrap_content"
            android:layout_height="70sp"
            android:textSize="28sp"
            android:layout_alignTop="@+id/buttonTimeStart"
            android:layout_toRightOf="@+id/buttonTimeStart"
            android:text="Stop" />

    </RelativeLayout>


</RelativeLayout>
