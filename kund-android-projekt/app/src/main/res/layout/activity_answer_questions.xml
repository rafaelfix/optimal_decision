            <TextView
                android:id="@+id/outputTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                />

            <TextView
                android:id="@+id/outputCorrect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/outputTmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                />

            <TextView
                android:id="@+id/outputInDB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                />

            <ImageView
